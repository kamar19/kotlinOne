<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    tools:context=".MovieDetailsActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="bottom"

        />

    <ImageView
        android:id="@+id/imageViewPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/guidelinePath"
        app:layout_constraintEnd_toStartOf="@+id/MovieDetailsTextViewPath"
        app:layout_constraintTop_toTopOf="@+id/guidelinePath"
        app:srcCompat="@drawable/Path" />

    <TextView
        android:id="@+id/MovieDetailsTextViewPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto"
        android:text="@string/path_back"
        android:textColor="@color/colorPath"
        app:layout_constraintBottom_toTopOf="@+id/guidelinePath"
        app:layout_constraintTop_toTopOf="@+id/guidelinePath"
        tools:layout_editor_absoluteX="32dp"
        />


    <TextView
        android:id="@+id/MovieDetailsTextViewTegLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewTegLine"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="400dp" />

    <TextView
        android:id="@+id/MovieDetailsTextViewName"
        android:layout_width="343dp"
        android:layout_height="85dp"
        android:fontFamily="@font/roboto_condensed_light"
        android:gravity="center_vertical"
        android:lineHeight="40sp"
        android:lineSpacingExtra="0sp"
        android:minLines="2"
        android:text="@string/MovieDetailsTextViewName"
        android:textAppearance="@style/name"
        android:textColor="@color/colorName"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontalCenter"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalCenter"
        tools:targetApi="p" />


    <TextView
        android:id="@+id/MovieDetailsTextViewSomeId"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/MovieDetailsTextViewSomeId"
        android:textAppearance="@style/some_id"
        android:gravity="center_horizontal|center_vertical"
        />

    <RelativeLayout
        android:id="@+id/pg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pg"
        />

    <View
        android:id="@+id/rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rect"
        android:alpha="0.9"
        />





    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="467dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
